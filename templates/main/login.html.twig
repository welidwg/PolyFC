{% extends "base.html.twig" %}
{% block title %}Connexion
{% endblock %}
{% block content %}
	<div class="row">
		<div class="col">


			<section data-aos="zoom-in" class="register-photo" style="background: rgba(241,247,252,0);border-width: 0px;border-radius: 25px;padding-bottom: 5px;padding-top: 5px;">


				<div class="form-container">
					<div class="image-holder" style="background: url(&quot;assets/img/testss.jpg&quot;), var(--bs-white);background-size: cover, auto;"><img class="d-none" src="assets/img/testss.jpg" style="width: 498px;padding: 0px;margin-top: 4px;filter: sepia(2%);"></div>
					<form method="post" style="background: #EBF9FF;" action="{{ path('login') }}">

						<h2 class="text-center">
							<strong>Connexion</strong>
						</h2>
						<div class="mb-3">
							<label class="form-label" style="margin-left: 7px;">Nom d'utilisateur</label><input class="form-control" type="text" name="_username" placeholder="Nom d'utilisateur"></div>
						<label class="form-label" style="margin-left: 7px;">Mot de passe :&nbsp;</label>
						<div class="mb-3"><input class="form-control" type="password" name="_password" placeholder="Mot de passe"></div>
						<div class="mb-3"></div>
						<div class="mb-3"></div>
						<div class="mb-3">
							<button class="btn btn-primary d-block w-100" type="submit" style="background: #09005d;">Se connecter</button>
							{% if error %}
								<div class="text-center text-danger fw-bold">
									<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>


								</div>

							{% endif %}

						</div>
						<a class="already" href="creeCompte.html" style="font-size: 14px;">Ou bien , cr√©er un compte maintenant.</a>
					</form>
				</div>
			</section>
		</div>
	</div>


{% endblock %}
