{% extends 'base.html.twig' %}

{% block title %}Formation
{% endblock %}

{% block content %}
	{% embed "layout/card.html.twig" %}
		{% block card_title %}
			Formation details


		{% endblock %}
		{% block card_body %}
			<table class="table">
				<tbody>

					<tr>
						<th>Libelle</th>
						<td>{{ formation.libelleFormation }}</td>
					</tr>
					<tr>
						<th>Enseignant</th>
						<td>{{ formation.enseignant.iduser.login }}</td>
					</tr>
					<tr>
						<th>Certification</th>
						<td>
							<a href="{{ path('app_certif_show', {'id': formation.certification.id}) }}">{{ formation.certification.libelle }}</a>


						</td>

					</tr>

				</tbody>
			</table>


		{% endblock %}
		{% block card_footer %}

			<a href="{{ path('app_formation_index') }}" class="btn btn-primary">Retour vers la list</a>

			<a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="btn btn-success">Modifier</a>


			{{ include('formation/_delete_form.html.twig') }}

		{% endblock %}

	{% endembed %}


{% endblock %}
