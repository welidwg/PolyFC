<form method="post" action="{{ path('app_formation_delete', {'id': formation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
    <button class="btn">Delete</button>
    <button class="btn btn-sm" type="submit" style="color: rgb(224,221,216);background: #152a6c;">Delete</button>
</form>
