{% extends 'base.html.twig' %}

{% block title %}Certification
{% endblock %}

{% block content %}
	<div class="card col-md-6 mx-auto">

		<div class="card-header py-3">
			<p class="text-primary m-0 fw-bold d-flex flex-row">
				Detailles


			</p>
		</div>

		<div class="card-body">

			<table class="table">
				<tbody>

					<tr>
						<th>Libelle</th>
						<td>{{ certification.libelle }}</td>
					</tr>
					<tr>
						<th>Type</th>
						<td>{{ certification.typeCertif.libelle }}</td>

					</tr>
					<tr>
						<th>Date debut :
						</th>
						<td>{{ certification.sessionCertif.dateDebut | date("Y-m-d h:i") }}</td>


					</tr>
					<tr>
						<th>Date fin :
						</th>
						<td>{{ certification.sessionCertif.dateFin | date("Y-m-d h:i")}}</td>


					</tr>


				</tbody>
			</table>
			<div class="d-flex justify-content-evenly">
				<a class="btn btn-primary" href="{{ path('app_certif_index') }}">Retour</a>

				<a class="btn btn-success" href="{{ path('app_certif_edit', {'id': certification.id}) }}">Modifier</a>
				{{ include('certif/_delete_form.html.twig') }}

			</div>


		</div>

	{% endblock %}
