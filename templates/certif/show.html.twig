{% extends 'base.html.twig' %}

{% block title %}Certification
{% endblock %}

{% block content %}
	<div class="card col-md-6 mx-auto">

		<div class="card-header py-3">
			<p class="text-primary m-0 fw-bold d-flex flex-row">
				Details certification


			</p>
		</div>

		<div class="card-body">

			<table class="table">
				<tbody>

					<tr>
						<th>Libelle</th>
						<td>{{ certification.libelle }}</td>
					</tr>
					<tr>
						<th>Type</th>
						<td>{{ certification.typeCertif.libelle }}</td>

					</tr>
					<tr>
						<th>Session</th>
						<td>
							{% if is_granted("ROLE_ADMIN") %}

								<a href="{{path('app_session_certif_show', {'id': certification.sessionCertif.id}) }}">{{ certification.sessionCertif.libelle }}</a>
							{% else %}
								{{ certification.sessionCertif.libelle }}

							{% endif %}


						</td>


					</tr>

					<tr>
						<th>Date debut :
						</th>
						<td>{{ certification.sessionCertif.dateDebut | date("Y-m-d H:i ") }}</td>


					</tr>
					<tr>
						<th>Date fin :
						</th>
						<td>{{ certification.sessionCertif.dateFin | date("Y-m-d H:i ")}}</td>


					</tr>


				</tbody>
			</table>

			<div class="d-flex justify-content-evenly">
				<a class="btn btn-primary" href="{{ path('app_certif_index') }}">Retour</a>
				{% if is_granted("ROLE_ADMIN") %}


					<a class="btn btn-success" href="{{ path('app_certif_edit', {'id': certification.id}) }}">Modifier</a>
					{{ include('certif/_delete_form.html.twig') }}
				{% endif %}

			</div>


		</div>

	{% endblock %}
